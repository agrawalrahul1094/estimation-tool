.wrapper
  height 100%
  display flex
  .content-container
    height 91%
  .navigation-container
      display flex
      align-items center

.slide-title {
  width: 100%;
  display: inline-block;
  color: #cdd0d4;
  cursor: pointer;
}
.green {
  color: #3db39e!important;
}

.slide-point {
  line-height: 30px;
  position: relative;
  top: -3px;
  right 8px;
}

.pagination-circle-new {
  border-radius: 50px;
  width: 16px;
  height: 16px;
  display: inline-block;
  border: 2px solid #ff00f0;
}

.pagination-circle-new {
  cursor: pointer;
}

.green .pc-inside-light-new {
  border-radius: 50px;
  width: 8px;
  height: 8px;
  display: block;
  background: #fff;
  margin-left: 2px;
  margin-top: 2px;
}

.grey .pc-inside-light-new {
  border-radius: 50px;
  width: 12px;
  height: 12px;
  display: block;
  background: #cdd0d4;
  margin-right: 1px;
}

.nav-menu-collapsed
  display none

@media screen and (max-width:767px)
  .nav-menu
    display none
  .nav-menu-collapsed
    display block
  .wrapper
    position relative
    .navigation-container
      position absolute
      justify-content flex-end
